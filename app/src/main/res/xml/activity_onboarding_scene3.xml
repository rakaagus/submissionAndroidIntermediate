<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetStart="@id/start"
        motion:duration="1000"
        motion:constraintSetEnd="@id/page2">
       <KeyFrameSet>
       </KeyFrameSet>
        <OnSwipe motion:dragDirection="dragLeft" />
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/bg_image"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="420dp"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp" />
        <Constraint
            android:id="@+id/tv_skip"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="42dp"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="42dp" />
        <Constraint
            android:id="@+id/iv_get_started"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="330dp"
            motion:layout_constraintBottom_toBottomOf="@+id/bg_image"
            motion:layout_constraintTop_toTopOf="@+id/bg_image"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/tv_subtitle_get_started"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
            motion:layout_constraintTop_toBottomOf="@+id/bg_image" />
        <Constraint
            android:id="@+id/tv_title_get_started"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
            motion:layout_constraintTop_toBottomOf="@+id/tv_subtitle_get_started" />
        <Constraint
            android:id="@+id/tv_desc_onboarding_one"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
            motion:layout_constraintTop_toBottomOf="@+id/tv_title_get_started" />
        <Constraint
            android:id="@+id/page_one"
            android:layout_width="33dp"
            android:layout_height="3dp"
            motion:layout_constraintTop_toBottomOf="@+id/tv_desc_onboarding_one"
            android:layout_marginStart="24dp"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp" />
        <Constraint
            android:id="@+id/page_two"
            motion:layout_constraintStart_toEndOf="@id/page_one"
            android:layout_width="33dp"
            android:layout_height="3dp"
            motion:layout_constraintBottom_toBottomOf="@id/page_one"
            android:layout_marginStart="5dp"
            motion:layout_constraintTop_toTopOf="@+id/page_one" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/bg_image"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="420dp"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp" />
        <Constraint
            android:id="@+id/tv_skip"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="42dp"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="42dp" />
        <Constraint
            android:id="@+id/iv_get_started"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="330dp"
            motion:layout_constraintBottom_toBottomOf="@+id/bg_image"
            motion:layout_constraintTop_toTopOf="@+id/bg_image"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/tv_subtitle_get_started"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
            motion:layout_constraintTop_toBottomOf="@+id/bg_image" />
        <Constraint
            android:id="@+id/tv_title_get_started"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
            motion:layout_constraintTop_toBottomOf="@+id/tv_subtitle_get_started" />
        <Constraint
            android:id="@+id/tv_desc_onboarding_one"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
            motion:layout_constraintTop_toBottomOf="@+id/tv_title_get_started" />
        <Constraint
            android:id="@+id/page_one"
            android:layout_width="33dp"
            android:layout_height="3dp"
            motion:layout_constraintTop_toBottomOf="@+id/tv_desc_onboarding_one"
            android:layout_marginStart="24dp"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp" />
        <Constraint
            android:id="@+id/page_two"
            motion:layout_constraintStart_toEndOf="@id/page_one"
            android:layout_width="33dp"
            android:layout_height="3dp"
            motion:layout_constraintBottom_toBottomOf="@id/page_one"
            android:layout_marginStart="5dp"
            motion:layout_constraintTop_toTopOf="@+id/page_one" />
    </ConstraintSet>
    <ConstraintSet
        android:id="@+id/page2"
        motion:deriveConstraintsFrom="@+id/end" >
        <Constraint
            android:id="@+id/iv_onboarding_two"
            android:layout_width="0dp"
            android:layout_height="330dp"
            motion:layout_constraintBottom_toBottomOf="@+id/bg_image"
            motion:layout_constraintTop_toTopOf="@+id/bg_image"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent" />
        <Constraint
            android:id="@+id/tv_subtitle_get_started"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            motion:layout_constraintTop_toBottomOf="@+id/bg_image"
            motion:layout_constraintEnd_toStartOf="parent" />
        <Constraint
            android:id="@+id/bg_image"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="420dp"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp" />
        <Constraint
            android:id="@+id/tv_skip"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="42dp"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="42dp" />
        <Constraint
            android:id="@+id/page_one"
            android:layout_width="33dp"
            android:layout_height="3dp"
            motion:layout_constraintTop_toBottomOf="@+id/tv_desc_onboarding_one"
            android:layout_marginStart="24dp"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp" />
        <Constraint
            android:id="@+id/page_two"
            motion:layout_constraintStart_toEndOf="@id/page_one"
            android:layout_width="33dp"
            android:layout_height="3dp"
            motion:layout_constraintBottom_toBottomOf="@id/page_one"
            android:layout_marginStart="5dp"
            motion:layout_constraintTop_toTopOf="@+id/page_one" />
        <Constraint
            android:id="@+id/iv_get_started"
            android:layout_width="0dp"
            android:layout_height="330dp"
            motion:layout_constraintBottom_toBottomOf="@+id/bg_image"
            motion:layout_constraintTop_toTopOf="@+id/bg_image"
            motion:layout_constraintEnd_toStartOf="parent" />
        <Constraint
            android:id="@+id/tv_title_get_started"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            motion:layout_constraintTop_toBottomOf="@+id/tv_subtitle_get_started"
            motion:layout_constraintEnd_toStartOf="parent" />
        <Constraint
            android:id="@+id/tv_desc_onboarding_one"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            motion:layout_constraintTop_toBottomOf="@+id/tv_title_get_started"
            motion:layout_constraintEnd_toStartOf="parent" />
        <Constraint
            android:id="@+id/tv_subtitle_onboarding_two"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@+id/bg_image"
            android:layout_marginTop="8dp"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp" />
        <Constraint
            android:id="@+id/tv_title_onboarding_two"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@+id/tv_subtitle_onboarding_two"
            android:layout_marginTop="8dp"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp" />
        <Constraint
            android:id="@+id/tv_desc_onboarding_two"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@+id/tv_title_onboarding_two"
            android:layout_marginTop="8dp"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            motion:layout_constraintEnd_toEndOf="parent" />
        <Constraint
            android:id="@+id/btn_next"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toBottomOf="@+id/indicator_page_onboarding"
            android:alpha="1"
            android:layout_marginBottom="24dp" />
    </ConstraintSet>
    <Transition
        motion:constraintSetStart="@+id/end"
        motion:constraintSetEnd="@+id/page2"
        motion:duration="358">
        <OnSwipe motion:dragDirection="dragRight" />
    </Transition>
</MotionScene>